<%- include('../layouts/header'); -%>
    <link href="/css/add_editpage.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <main>
            <h1 id="createSchedule">Create a Schedule</h1>
            <form name="Inventory" method="post" action="/schedule/addSchedule" class="scheduleForm">
                <div class="textboxes">
                    <label class="scheduleLable">Employee Name: </label>
                    <select name="eName" id="eName" class="scheduleTextboxes select" autofocus>
                        <option value="---Select Employee---">-------------- Select Employee --------------</option>
                        <% for(var employee of employees){ %>
                            <% var name=employee.name%>
                                <option value="<%= name %>">
                                    <%= name %>
                                </option>
                                <% }%>
                    </select>

                    <label class="scheduleLable">Day: </label>
                    <select name="sDay" id="sDay" class="scheduleTextboxes select">
                        <option value="---Select Day---">-------------- Select Day --------------</option>
                        <option value="Sunday">Sunday</option>
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                    </select>

                    <label class="scheduleLable">Start Time: </label>
                    <select name="startTime" id="startTime" class="scheduleTextboxes select">
                        <option value="---Start Time---">-------------- Start Time --------------</option>
                        <% for(var i=0; i < 12; i++) {%>
                            <option value="<%= i %> AM">
                                <%= i %> AM
                            </option>
                            <% } %>
                                <% for(var j=12; j < 24; j++) {%>
                                    <option value="<%= j %> PM">
                                        <%= j %> PM
                                    </option>
                                    <% } %>
                    </select>

                    <label class="scheduleLable">End Time: </label>
                    <select name="endTime" id="endTime" class="scheduleTextboxes select">
                        <option value="---End Time---">-------------- End Time --------------</option>
                        <% for(var i=0; i < 12; i++) {%>
                            <option value="<%= i %> AM">
                                <%= i %> AM
                            </option>
                            <% } %>
                                <% for(var j=12; j < 24; j++) {%>
                                    <option value="<%= j %> PM">
                                        <%= j %> PM
                                    </option>
                                    <% } %>
                    </select>

                </div>
                <div class="buttons">
                    <button class="btnSubmit" id="submit"> Submit </button>

                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="/schedule" id="cancel" class="btnCancel">Cancel </a>
                </div>

             </form>
        <section class="errors">
            <% if(typeof(errors) !='undefined' ){ %>
                <div style="border-radius: 0 25px 0 25px;">
                    <h4 style=" color: black; padding-top: 10px;" >Errors</h4>
                    <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
                        <p style="color: maroon; text-align: left;">
                            * <%= error.msg %>
                        </p>
                        <% } } %>
                    </div>
                    <% } %>
            </section>
        </main>
        <%- include('../layouts/footer'); -%>