<%- include('../layouts/header'); -%>
    <link href="/css/table.css" rel="stylesheet">
    </head>

    <body>
        <a href="/userProfile">
            <div class="userIcon">
                <img src="../../images/user.png" alt="User name Icon">
                <h4>
                    <%= locals.admin ? admin: "Admin" %>
                </h4>

            </div>
        </a>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <%- include('../layouts/navigation'); -%>
            <section>
                <main>
                    <% if(typeof(message) !='undefined' ){ %>
                        <div class="messages">
                            <% if(locals.message){ %>
                                <%= message%>
                                    <% }%>
                                        <% } %>
                        </div>
                        <h1 id="schedule">Schedule</h1>
                        <div class="btn">
                            <a href="/schedule/addSchedule">
                                <button class="btn">Create Schedule</button>
                            </a>
                        </div>
                        <div class="table">
                            <table class="content-table">
                                <thead>
                                    <tr>
                                        <th>Employee Name</th>
                                        <th>Day</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var schedule of schedules){ %>
                                        <tr>
                                            <td>
                                                <%= schedule.employeeName %>
                                            </td>
                                            <td>
                                                <%= schedule.day %>
                                            </td>
                                            <td>
                                                <%= schedule.startTime %>
                                            </td>
                                            <td>
                                                <%= schedule.endTime %>
                                            </td>
                                            <td>
                                                <div class="buttons">
                                                    <a class="editButton"
                                                        href="/schedule/edit/<%= schedule._id %>">Change</a>
                                                    <a class="deleteButton"
                                                        href="/schedule/delete/<%= schedule._id %>">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                </main>
            </section>
            <%- include('../layouts/footer'); -%>