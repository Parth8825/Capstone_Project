<%- include('layouts/header'); -%>

    <link href="/css/employee.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <%- include('layouts/navigation'); -%>

            <% if(locals.message){ %>
                <%= message%>
                    <% }%>
                        <main>
                            <a href="/addEmployee">
                                <button class="btn">Add Employee</button>
                            </a>
                            <h1 id="employeeDetails">Employee Details</h1>
                            <table class="content-table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>Postal Code</th>
                                        <th>Position</th>
                                        <th>Payrate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var employee of employees){ %>
                                        <tr>
                                            <td>
                                                <%= employee.name %>
                                            </td>
                                            <td>
                                                <%= employee.email %>
                                            </td>
                                            <td>
                                                <%= employee.phone %>
                                            </td>
                                            <td>
                                                <%= employee.address %>
                                            </td>
                                            <td>
                                                <%= employee.postcode %>
                                            </td>
                                            <td>
                                                <%= employee.position %>
                                            </td>
                                            <td>
                                                <%= employee.payrate %>
                                            </td>
                                            <td>
                                                <button class="editBtn"><a
                                                        href="/edit/<%= employee._id %>">Edit</a></button>
                                                <button class="deleteBtn"><a
                                                        href="/delete/<%= employee._id %>">Delete</a></button>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </main>
                        <%- include('layouts/footer'); -%>