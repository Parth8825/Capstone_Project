<%- include('layouts/header'); -%>
    <%- include('layouts/navigation'); -%>
        <section>
            <% if(locals.message){ %>
                <%= message %>
                    <% }%>
                        <h3></h3>
                        <main>
                            <a href="/addEmployee">
                                <button class="btn">Add Employee</button>
                            </a>
                            <h1 id="employeeDetails">Employee Details</h1>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>Postal Code</th>
                                        <th>Position</th>
                                        <th>Payrate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var employee of employees){ %>
                                        <tr>
                                            <td>
                                                <%= employee.name %>
                                            </td>
                                            <td>
                                                <%= employee.email %>
                                            </td>
                                            <td>
                                                <%= employee.phone %>
                                            </td>
                                            <td>
                                                <%= employee.address %>
                                            </td>
                                            <td>
                                                <%= employee.postcode %>
                                            </td>
                                            <td>
                                                <%= employee.position %>
                                            </td>
                                            <td>
                                                <%= employee.payrate %>
                                            </td>
                                            <td>
                                                <button class="editBtn">Edit</button>
                                                <button class="deleteBtn"><a
                                                        href="/delete/<%= employee._id%>">Delete</a></button>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </main>
        </section>
        <%- include('layouts/footer'); -%>