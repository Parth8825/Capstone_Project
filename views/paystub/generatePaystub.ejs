<%- include('../layouts/header'); -%>
    <link href="/css/add_editpage.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <main>
            <h1 id="generatePaystub">Generate Paystub</h1>
            <form name="Employee" method="post" class="paystubForm">
                <% var employeeId %>
                    <label class="paystubLable">Employee Name: </label>
                    <select name="name" id="name" class="paystubTextboxes select" autofocus>
                        <option value="---Select Employee---">-------------- Select Employee --------------</option>
                        <% for(var employee of employees){ %>
                            <% var name=employee.name%>
                                <option value="<%= employee._id %>">
                                    <%= name %>
                                </option>
                                <% }%>
                    </select>

                    <label class="paystubLable">Weekly hours: </label>
                    <input id="weeklyHours" type="number" name="weeklyHours" class="paystubTextboxes"><br />

                    <label class="paystubLable">Date: </label>
                    <input id="date" placeholder="YYYY-MM-DD" type="date" name="date" class="paystubTextboxes">

                    <div class="buttons">
                        <button class="btnSubmit" id="submit"> Submit </button>

                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="/paystub" id="cancel" class="btnCancel">Cancel </a>
                    </div>
            </form>
            <section class="errors">
                <% if(typeof(errors) !='undefined' ){ %>
                    <div style="border-radius: 0 25px 0 25px;">
                        <h4 style=" color: black; padding-top: 10px;" >Errors</h4>
                        <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
                            <p style="color:maroon; text-align: left;">
                                * <%= error.msg %>
                            </p>
                            <% } } %>
                    </div>
                    <% } %>
            </section>
        </main>

        <%- include('../layouts/footer'); -%>