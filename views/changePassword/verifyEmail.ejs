<%- include('../layouts/header'); -%>
  <link href="/css/add_editpage.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <h2>Employee Management System</h2>
    </header>
    <main>
      <h1 id="generatePaystub">Please enter registered e-mail id</h1>
      <form method="post" action="/verifyEmail" class="paystubForm">
        <label class="paystubLable">Enter Your Email: </label>
        <input id="yourEmail" type="email" name="yourEmail" class="paystubTextboxes"><br />
        <% if(locals.error){ %>
          <div class="loginError">
            <%= error%>
          </div>
          <% } %>
            <div class="buttons">
              <button class="btnSubmit" id="submit"> Submit </button>
              &nbsp;&nbsp;&nbsp;&nbsp;
              <a href="/login" id="cancel" class="btnCancel">Cancel </a>
            </div>
      </form>
      <section class="errors">
        <% if(typeof(errors) !='undefined' ){ %>
          <div style="border-radius: 0 25px 0 25px;">
            <h4 style=" color: black; padding-top: 10px;">Errors</h4>
            <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
              <p style="color:maroon; text-align: left;">
                * <%= error.msg %>
              </p>
              <% } } %>
          </div>
          <% } %>
      </section>
    </main>

    <%- include('../layouts/footer'); -%>