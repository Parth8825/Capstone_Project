<%- include('../layouts/header'); -%>
    <link href="/css/add_editpage.css" rel="stylesheet">
    <script src="/js/dateValidation.js" type="text/javascript" defer></script>
    </head>

    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <main>
            <h1 id="addItem">Edit Item to Inventory</h1>
            <form name="Inventory" method="post" action="/inventory/edit/<%= inventory.id %>" class="inventoryForm">
                <div class="textboxes">
                    <label class="inventoryLable">Item Name: </label>
                    <input id="itemname" placeholder="Item Name" type="text" name="itemname" class="inventoryTextboxes"
                        value="<%= inventory.itemname %>"><br />

                    <label class="inventoryLable">Quantity: </label>
                    <input id="quantity" placeholder="Quantity" type="number" name="quantity" class="inventoryTextboxes"
                        value="<%= inventory.quantity %>"><br />

                    <label class="inventoryLable">Rate: </label>
                    <input id="rate" placeholder="$25" type="number" name="rate" class="inventoryTextboxes"
                        value="<%= inventory.rate %>"><br />

                    <label class="inventoryLable">Added By: </label>
                    <select name="addedby" class="inventoryTextboxes" id="addedby">
                        <option value="<%= inventory.addedby %>">
                            <%= inventory.addedby %>
                        </option>
                        <option value='---Select Employee---'>--------------</option>
                        <% for(var employee of employees){ %>
                            <% var name=employee.name%>
                                <option value="<%= name %>">
                                    <%= name %>
                                </option>
                                <% }%>
                    </select>

                    <label class="inventoryLable">Received Date: </label>
                    <input id="date" placeholder="YYYY-MM-DD" type="date" name="receiveddatetime"
                        class="inventoryTextboxes" value="<%= inventory.receiveddatetime %>"><br />

                    <label class="inventoryLable">Remained Item: </label>
                    <input id="remaineditem" type="number" name="remaineditem" class="inventoryTextboxes"
                        value="<%= inventory.remaineditem %>"><br />

                    <label class="inventoryLable">Description: </label>
                    <input id="description" type="text" name="description" class="inventoryTextboxes"
                        value="<%= inventory.description %>"><br />

                </div>
                <div class="buttons">
                    <button class="btnSubmit" id="submit"> Submit </button>

                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="/inventory" id="cancel" class="btnCancel">Cancel </a>
                </div>

            </form>
            <section class="errors">
                <% if(typeof(errors) !='undefined' ){ %>
                    <div style="border-radius: 0 25px 0 25px;">
                        <h4 style="text-decoration: underline;">Errors</h4>
                        <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
                            <p style="color:maroon; text-align: left;">
                                * <%= error.msg %>
                            </p>
                            <% } } %>
                    </div>
                    <% } %>
            </section>
        </main>
        <%- include('../layouts/footer'); -%>