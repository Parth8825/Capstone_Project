<%- include('../layouts/header'); -%>
  <link href="/css/inventory/addInventory.css" rel="stylesheet">
  </head>

  </head>

  <body>
    <header>
      <h2>Employee Management System</h2>
    </header>
    <main>
      <h1 id="addItem">Add Item To Inventory</h1>
      <form name="Inventory" method="post" action="/inventory/addInventory">
        <div class="textboxes">
          <label>Item Name: </label>
          <input id="itemname" placeholder="Item Name" type="text" name="itemname" class="space"
            value="<%= form.itemnameHolder %>"><br />

          <label>Quantity: </label>
          <input id="quantity" placeholder="Quantity" type="number" name="quantity" class="space"
            value="<%= form.quantityHolder %>"><br />

          <label>Rate: </label>
          <input id="rate" placeholder="$25" type="number" name="rate" class="space"
            value="<%= form.rateHolder %>"><br />

        <label>Added By: </label>
        <select name="addedby" class="space" id="addedby">
          <% if(typeof(form.addedbyHolder) !='undefined' ){ %>
            <option value="<%= form.addedbyHolder %>">
              <%= form.addedbyHolder %>
            </option>
            <% } %>
              <option value='---Employee Name---'>--------------</option>
              <% for(var employee of employees){ %>
                <% var name=employee.name%>
                  <option value="<%= name %>">
                    <%= name %>
                  </option>
                  <% }%>
        </select>

          <label>Received Date & Time: </label>
          <input id="receiveddatetime" placeholder="YYYY-MM-DD" type="date" name="receiveddatetime" class="space"
            value="<%= form.receiveddateHolder %>"><br />

          <label>Remained Item: </label>
          <input id="remaineditem" type="number" name="remaineditem" class="space"
            value="<%= form.remaineditemHolder %>"><br />

          <label>Description: </label>
          <input id="description" type="text" name="description" class="space"
            value="<%= form.descriptionHolder %>"><br />

          <p id="errors"></p>

        </div>
        <div class="buttons">
          <button class="btnSubmit" id="submit"> Submit </button>

          &nbsp;&nbsp;&nbsp;&nbsp;
          <a href="/inventory" id="cancel" class="btnCancel">Cancel </a>
        </div>
    </form>
    <section class="errors">
      <% if(typeof(errors) !='undefined' ){ %>
        <div style="border-radius: 0 25px 0 25px;">
          <h4 style="text-decoration: underline;">Errors</h4>
          <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
            <p style="color:maroon; text-align: left;">
              * <%= error.msg %>
            </p>
            <% } } %>
          </div>
          <% } %>
      </section>
    </main>
    <%- include('../layouts/footer'); -%>