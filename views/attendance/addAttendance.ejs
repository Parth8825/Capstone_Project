<%- include('../layouts/header'); -%>
    <link href="/css/add_editpage.css" rel="stylesheet">
    <script src="/js/dateValidation.js" type="text/javascript" defer></script>
    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <main>
            <h1 id="addAttendance">Take Attendance</h1>
            <form name="Attendance" method="post" action="/attendance/addAttendance" class="attendanceForm">
                <div class="textboxes">
                    <label class="attendanceLable">Employee Name: </label>
                    <select name="eName" id="eName" class="attendanceTextboxes select" autofocus>
                        <option value="---Select Employee---">-------------- Select Employee --------------</option>
                        <% for(var employee of employees){ %>
                            <% var name=employee.name%>
                                <option value="<%= name %>">
                                    <%= name %>
                                </option>
                                <% }%>
                    </select>

                    <label class="attendanceLable">Date: </label>
                    <input id="date" placeholder="YYYY-MM-DD" type="date" name="date" class="attendanceTextboxes"><br />

                    <label class="attendanceLable">Day: </label>
                    <select name="sDay" id="sDay" class="attendanceTextboxes select">
                        <option value="---Select Day---">-------------- Select Day --------------</option>
                        <option value="Sunday">Sunday</option>
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                    </select>

                    <label class="attendanceLable">Present / Absent : </label>
                    <select name="attendance" id="attendance" class="attendanceTextboxes select">
                        <option value="---Take Attendnace---">-------------- Take Attendance --------------</option>
                        <option value="Present">Present</option>
                        <option value="Absent">Absent</option>
                    </select>

                    <p id="errors"></p>

                </div>
                <div class="buttons">
                    <button class="btnSubmit" id="submit"> Submit </button>

                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="/attendance" id="cancel" class="btnCancel">Cancel </a>
                </div>

            </form>
            <section class="errors">
                <% if(typeof(errors) !='undefined' ){ %>
                    <div style="border-radius: 0 25px 0 25px;">
                        <h4 style=" color: black; padding-top: 10px;">Errors</h4>
                        <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
                            <p style="color: maroon; text-align: left;">
                                * <%= error.msg %>
                            </p>
                            <% } } %>
                    </div>
                    <% } %>
            </section>
        </main>
        <%- include('../layouts/footer'); -%>