<%- include('../layouts/header'); -%>
  <link href="/css/employee/addEmployee.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <h2>Employee Management System</h2>
    </header>
    <main>
      <h1 id="addEmployee">Add Employee Details</h1>
      <form name="Employee" method="post" action="/addEmployee">
        <div class="textboxes">
          <label>First Name: </label>
          <input id="firstname" placeholder="First name" type="text" name="firstname" class="space"
            value="<%= form.firstnameHolder %>"><br />

          <label>Last Name: </label>
          <input id="lastname" placeholder="Last name" type="text" name="lastname" class="space"
            value="<%= form.lastnameHolder %>"><br />

          <label>Email: </label>
          <input id="email" placeholder="email@domain.com" type="email" name="email" class="space"
            value="<%= form.emailHolder %>"><br />

          <label>Phone: </label>
          <input id="phone" placeholder="123-123-1234" type="phone" name="phone" class="space"
            value="<%= form.phoneHolder %>"><br />

          <label>Address: </label>
          <input id="address" type="address" name="address" class="space" value="<%= form.addressHolder %>"><br />
          <label>Post Code: </label>
          <input id="postcode" placeholder="X9X 9X9" type="postcode" name="postcode" class="space"
            value="<%= form.postcodeHolder %>"><br />

          <label>Position: </label>
          <input id="position" type="text" name="position" class="space" value="<%= form.positionHolder %>"><br />

          <label>Payrate: </label>
          <input id="payrate" type="number" name="payrate" class="space" value="<%= form.payrateHolder %>"><br />

          <p id="errors"></p>

        </div>
        <div class="buttons">
          <button class="btnSubmit" id="submit"> Submit </button>

          &nbsp;&nbsp;&nbsp;&nbsp;
          <a href="/" id="cancel" class="btnCancel">Cancel </a>
        </div>
      </form>
      <section class="errors">
        <% if(typeof(errors) !='undefined' ){ %>
          <div style="border-radius: 0 25px 0 25px;">
            <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
              <p style="color:maroon;">
                <%= error.msg %>
              </p>
              <% } } %>
          </div>
          <% } %>
      </section>
    </main>
    <%- include('../layouts/footer'); -%>