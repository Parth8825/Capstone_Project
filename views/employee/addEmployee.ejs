<%- include('../layouts/header'); -%>
  <link href="/css/add_editpage.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <h2>Employee Management System</h2>
    </header>
    <main>
    <h1 id="addEmployee">Add Employee Details</h1>
    <form name="Employee" method="post" action="/addEmployee" class="employeeForm">
      <div class="textboxes">

        <label class="employeeLable">First Name: </label>
        <input id="firstname" placeholder="First name" type="text" name="firstname" class="employeeTextboxes"
          value="<%= form.firstnameHolder %>"><br />

        <label class="employeeLable">Last Name: </label>
        <input id="lastname" placeholder="Last name" type="text" name="lastname" class="employeeTextboxes"
          value="<%= form.lastnameHolder %>"><br />

        <label class="employeeLable">Email: </label>
        <input id="email" placeholder="email@domain.com" type="email" name="email" class="employeeTextboxes"
          value="<%= form.emailHolder %>"><br />

        <label class="employeeLable">Phone: </label>
        <input id="phone" placeholder="123-123-1234" type="phone" name="phone" class="employeeTextboxes"
          value="<%= form.phoneHolder %>"><br />

        <label class="employeeLable">Address: </label>
        <input id="address" type="address" name="address" class="employeeTextboxes" value="<%= form.addressHolder %>"><br />
        
        <label class="employeeLable">Post Code: </label>
        <input id="postcode" placeholder="X9X 9X9" type="postcode" name="postcode" class="employeeTextboxes"
          value="<%= form.postcodeHolder %>"><br />

        <label class="employeeLable">Position: </label>
        <input id="position" type="text" name="position" class="employeeTextboxes" value="<%= form.positionHolder %>"><br />

        <label class="employeeLable">Payrate: </label>
        <input id="payrate" type="number" name="payrate" class="employeeTextboxes" value="<%= form.payrateHolder %>"><br />

        <p id="errors"></p>

      </div>
      <div class="buttons">
        <button class="btnSubmit" id="submit"> Submit </button>

        &nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/" id="cancel" class="btnCancel">Cancel </a>
      </div>
    </form>
    <section class="errors">
      <% if(typeof(errors) !='undefined' ){ %>
        <div style="border-radius: 0 25px 0 25px;">
          <h4 style=" color: black; padding-top: 10px;" >Errors</h4>
          <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
            <p style="color:maroon; text-align: left;">
              * <%= error.msg %>
            </p>
            <% } } %>
          </div>
          <% } %>
      </section>
    </main>
    <%- include('../layouts/footer'); -%>