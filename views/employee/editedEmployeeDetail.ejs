<%- include('../layouts/header'); -%>

    <link href="/css/employee/editEmployeeDetails.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <section class="page">
            <% if(typeof(errors) !='undefined' ){ %>
                <div style="border: 3px double gray; border-bottom: 5px double gray; border-radius: 0 25px 0 25px;">
                    <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
                        <p>
                            <%= error.msg %>
                        </p>
                        <% } } %>
                </div>
                <% } %>
                    <% if(typeof(payrate) !='undefined' ){ %>
                        <h2>Employee Data updated successfully !!</h2>
                        <table>
                            <tr>
                                <th>Name: </th>
                                <td>
                                    <%= name %>
                                </td>
                            </tr>
                            <tr>
                                <th>Email: </th>
                                <td>
                                    <%= email %>
                                </td>
                            </tr>
                            <tr>
                                <th>Phone: </th>
                                <td>
                                    <%= phone %>
                                </td>
                            </tr>
                            <tr>
                                <th>Address: </th>
                                <td>
                                    <%= address %>
                                </td>
                            </tr>
                            <tr>
                                <th>Postcode: </th>
                                <td>
                                    <%= postcode %>
                                </td>
                            </tr>
                            <tr>
                                <th>Position: </th>
                                <td>
                                    <%= position %>
                                </td>
                            </tr>
                            <tr>
                                <th>Payrate: </th>
                                <td>
                                    <%= payrate %>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <a href="/" class="button">Go back to Main</a>
                                </th>
                            </tr>

                        </table>
                        <% } %>
                            <!-- <%- include('../layouts/footer'); -%> -->