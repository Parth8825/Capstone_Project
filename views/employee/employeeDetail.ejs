<%- include('../layouts/header'); -%>

    <link href="/css/editedDetailsPage.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <h2>Employee Management System</h2>
        </header>
        <main>
            <h2>Employee Detail</h2>
            <table>
                <tr>
                    <th>Name: </th>
                    <td>
                        <%= employee.name %>
                    </td>
                </tr>
                <tr>
                    <th>Email: </th>
                    <td>
                        <%= employee.email %>
                    </td>
                </tr>
                <tr>
                    <th>Phone: </th>
                    <td>
                        <%= employee.phone %>
                    </td>
                </tr>
                <tr>
                    <th>Address: </th>
                    <td>
                        <%= employee.address %>
                    </td>
                </tr>
                <tr>
                    <th>Postcode: </th>
                    <td>
                        <%= employee.postcode %>
                    </td>
                </tr>
                <tr>
                    <th>Position: </th>
                    <td>
                        <%= employee.position %>
                    </td>
                </tr>
                <tr>
                    <th>Payrate: </th>
                    <td>
                        <%= employee.payrate %>
                    </td>
                </tr>
                <tr>
                    <th>
                        <a href="/" class="button">Go back</a>
                    </th>
                </tr>

            </table>
        </main>
        <%- include('../layouts/footer'); -%>